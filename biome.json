{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "ignore": ["dist/**", "node_modules/**", "coverage/**", "examples/**"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "error"
      },
      "style": {
        "useConst": "warn",
        "useTemplate": "warn",
        "noInferrableTypes": "off"
      },
      "nursery": {
        "useExplicitType": "error"
      },
      "correctness": {
        "noUnusedVariables": "error"
      },
      "complexity": {
        "noStaticOnlyClass": "off",
        "noThisInStatic": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingCommas": "all",
      "bracketSpacing": true,
      "arrowParentheses": "asNeeded"
    }
  },
  "overrides": [
    {
      "include": ["tests/**/*.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off"
          }
        }
      }
    }
  ]
}
